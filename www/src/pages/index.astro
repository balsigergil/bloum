---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="min-h-screen bg-gray-950">
    <!-- Background Effects -->
    <div class="fixed inset-0 bg-gray-950">
      <div
        class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,_var(--tw-gradient-stops))] from-indigo-900/20 via-gray-950 to-gray-950"
      >
      </div>
      <div class="absolute inset-0 bg-indigo-950 opacity-50"></div>
    </div>

    <!-- Main Content -->
    <div class="relative z-10">
      <!-- Navigation -->
      <nav
        class="fixed top-0 left-0 right-0 z-50 backdrop-blur-lg bg-gray-950/70 border-b border-gray-800/50"
      >
        <div class="container mx-auto px-6 py-4">
          <div class="flex items-center justify-between">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 rounded-lg gradient-primary"></div>
              <span class="text-xl font-bold">Bloum</span>
            </div>
            <div class="flex items-center gap-6">
              <a
                href="#features"
                class="text-gray-400 hover:text-gray-100 transition-colors"
                >Features</a
              >
              <a
                href="#components"
                class="text-gray-400 hover:text-gray-100 transition-colors"
                >Components</a
              >
              <a
                href="#docs"
                class="text-gray-400 hover:text-gray-100 transition-colors"
                >Docs</a
              >
              <a
                href="https://github.com/gilibalsiger/bloum"
                target="_blank"
                rel="noopener noreferrer"
                class="text-gray-400 hover:text-gray-100 transition-colors"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </nav>

      <!-- Hero Section -->
      <section class="pt-32 pb-20 px-6">
        <div class="container mx-auto max-w-6xl text-center">
          <div
            class="inline-flex items-center gap-2 px-4 py-2 bg-indigo-950/50 border border-indigo-900/50 rounded-full text-sm mb-8"
          >
            <span class="text-indigo-400">Lightweight</span>
            <span class="text-gray-600">•</span>
            <span class="text-purple-400">Accessible</span>
            <span class="text-gray-600">•</span>
            <span class="text-pink-400">Modern CSS</span>
          </div>

          <h1 class="text-5xl md:text-7xl font-bold mb-6">
            <span class="text-gradient">Bloum</span>
            <br />
            <span class="text-3xl md:text-5xl text-gray-300 font-normal">
              A powerful library of modern web components
            </span>
          </h1>

          <p class="text-xl text-gray-400 mb-10 max-w-3xl mx-auto">
            Lightweight, accessible, framework-agnostic UI components designed
            for creating design systems that work with any full-stack technology
          </p>

          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#get-started" class="btn-primary">
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
              Get Started
            </a>
            <a href="#components" class="btn-secondary">
              <svg
                class="w-5 h-5"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
                ></path>
              </svg>
              View Components
            </a>
          </div>
        </div>
      </section>

      <!-- Bento Grid Section -->
      <section id="features" class="px-6 pb-20">
        <div class="container mx-auto max-w-7xl">
          <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 auto-rows-[200px]"
          >
            <!-- Framework Agnostic - Large Box -->
            <div
              class="bento-box col-span-1 md:col-span-2 row-span-1 lg:row-span-2 p-8 flex flex-col justify-between group"
            >
              <div>
                <div
                  class="inline-flex p-3 bg-indigo-500/10 rounded-xl mb-4 group-hover:scale-110 transition-transform"
                >
                  <svg
                    class="w-8 h-8 text-indigo-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-2xl font-bold mb-3">Framework Agnostic</h3>
                <p class="text-gray-400 mb-6">
                  Works seamlessly with any full-stack technology or framework
                </p>
              </div>
              <div class="grid grid-cols-3 gap-4">
                <div
                  class="flex items-center justify-center p-3 bg-gray-800/50 rounded-lg"
                >
                  <span class="text-sm font-medium">Laravel</span>
                </div>
                <div
                  class="flex items-center justify-center p-3 bg-gray-800/50 rounded-lg"
                >
                  <span class="text-sm font-medium">Django</span>
                </div>
                <div
                  class="flex items-center justify-center p-3 bg-gray-800/50 rounded-lg"
                >
                  <span class="text-sm font-medium">Rails</span>
                </div>
                <div
                  class="flex items-center justify-center p-3 bg-gray-800/50 rounded-lg"
                >
                  <span class="text-sm font-medium">HTMX</span>
                </div>
                <div
                  class="flex items-center justify-center p-3 bg-gray-800/50 rounded-lg"
                >
                  <span class="text-sm font-medium">Alpine.js</span>
                </div>
                <div
                  class="flex items-center justify-center p-3 bg-gray-800/50 rounded-lg"
                >
                  <span class="text-sm font-medium">Vanilla JS</span>
                </div>
              </div>
            </div>

            <!-- Accessibility First - Medium Box -->
            <div
              class="bento-box col-span-1 md:col-span-2 row-span-1 p-8 group"
            >
              <div class="flex items-center justify-between h-full">
                <div>
                  <div
                    class="inline-flex p-3 bg-purple-500/10 rounded-xl mb-4 group-hover:scale-110 transition-transform"
                  >
                    <svg
                      class="w-8 h-8 text-purple-400"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
                      ></path>
                    </svg>
                  </div>
                  <h3 class="text-xl font-bold mb-2">Accessibility First</h3>
                  <p class="text-gray-400">
                    WAI-ARIA compliant with full keyboard navigation support
                  </p>
                </div>
                <div class="hidden lg:block">
                  <div class="relative">
                    <div class="absolute inset-0 bg-purple-500/20 blur-3xl">
                    </div>
                    <svg
                      class="w-24 h-24 text-purple-400/20 relative"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
                      ></path>
                    </svg>
                  </div>
                </div>
              </div>
            </div>

            <!-- Lightweight - Small Box -->
            <div class="bento-box col-span-1 row-span-1 p-6 group">
              <div
                class="inline-flex p-3 bg-green-500/10 rounded-xl mb-4 group-hover:scale-110 transition-transform"
              >
                <svg
                  class="w-6 h-6 text-green-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2">Lightweight</h3>
              <p class="text-sm text-gray-400">
                Fast loading • Low bundle size
              </p>
              <div class="mt-4">
                <div class="text-2xl font-bold text-green-400">~45KB</div>
                <div class="text-xs text-gray-500">Minified + Gzipped</div>
              </div>
            </div>

            <!-- TypeScript Ready - Small Box -->
            <div class="bento-box col-span-1 row-span-1 p-6 group">
              <div
                class="inline-flex p-3 bg-blue-500/10 rounded-xl mb-4 group-hover:scale-110 transition-transform"
              >
                <svg
                  class="w-6 h-6 text-blue-400"
                  viewBox="0 0 24 24"
                  fill="currentColor"
                >
                  <path
                    d="M3 3h18v18H3V3zm16.525 13.707c-.131-.821-.666-1.511-2.252-2.155-.552-.259-1.165-.438-1.349-.854-.068-.248-.078-.382-.034-.529.113-.484.687-.629 1.137-.495.293.09.563.315.732.676.775-.507.775-.507 1.316-.844-.203-.314-.304-.451-.439-.586-.473-.528-1.103-.798-2.126-.775l-.528.067c-.507.124-.991.395-1.283.754-.855.968-.608 2.655.427 3.354 1.023.765 2.521.933 2.712 1.653.18.878-.652 1.159-1.475 1.058-.607-.136-.945-.439-1.316-1.002l-1.372.788c.157.359.337.517.607.832 1.305 1.316 4.568 1.249 5.153-.754.021-.067.18-.528.056-1.237l.034.049zm-6.737-5.434h-1.686c0 1.453-.007 2.898-.007 4.354 0 .924.047 1.772-.104 2.033-.247.517-.886.451-1.175.359-.297-.146-.448-.349-.623-.641-.047-.078-.082-.146-.095-.146l-1.368.844c.229.473.563.879.994 1.137.641.383 1.502.507 2.404.305.588-.17 1.095-.519 1.358-1.059.384-.697.302-1.553.299-2.509.008-1.541 0-3.083 0-4.635l.003-.042z"
                  ></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2">TypeScript Ready</h3>
              <p class="text-sm text-gray-400">
                Full type definitions included
              </p>
            </div>

            <!-- Progressive Enhancement - Medium Box -->
            <div
              class="bento-box col-span-1 row-span-1 md:row-span-2 p-8 group"
            >
              <div>
                <div
                  class="inline-flex p-3 bg-pink-500/10 rounded-xl mb-4 group-hover:scale-110 transition-transform"
                >
                  <svg
                    class="w-8 h-8 text-pink-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold mb-3">Progressive Enhancement</h3>
                <p class="text-gray-400 mb-6">
                  Perfect for server-side rendered applications
                </p>
                <div class="space-y-3">
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 bg-pink-400 rounded-full"></div>
                    <span class="text-sm text-gray-300"
                      >Works without JavaScript</span
                    >
                  </div>
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 bg-pink-400 rounded-full"></div>
                    <span class="text-sm text-gray-300"
                      >Enhances with JS enabled</span
                    >
                  </div>
                  <div class="flex items-center gap-3">
                    <div class="w-2 h-2 bg-pink-400 rounded-full"></div>
                    <span class="text-sm text-gray-300">SEO friendly</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Easy Integration - Large Box -->
            <div
              class="bento-box col-span-1 md:col-span-2 row-span-1 p-8 group"
            >
              <div>
                <div
                  class="inline-flex p-3 bg-orange-500/10 rounded-xl mb-4 group-hover:scale-110 transition-transform"
                >
                  <svg
                    class="w-8 h-8 text-orange-400"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                    ></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold mb-3">Easy Integration</h3>
                <p class="text-gray-400 mb-4">
                  Get started in seconds with CDN or NPM
                </p>
                <div class="code-block">
                  <code class="text-orange-400">npm install bloum</code>
                </div>
              </div>
            </div>

            <!-- Component Library - Medium Box -->
            <div
              class="bento-box col-span-1 row-span-1 md:row-span-2 p-8 group overflow-hidden"
            >
              <div class="relative h-full">
                <div>
                  <div
                    class="inline-flex p-3 bg-cyan-500/10 rounded-xl mb-4 group-hover:scale-110 transition-transform"
                  >
                    <svg
                      class="w-8 h-8 text-cyan-400"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z"
                      ></path>
                    </svg>
                  </div>
                  <h3 class="text-xl font-bold mb-3">Component Library</h3>
                  <p class="text-gray-400 mb-4">
                    30+ production-ready components
                  </p>
                </div>
                <div
                  class="absolute bottom-0 right-0 -mb-4 -mr-4 opacity-10 group-hover:opacity-20 transition-opacity"
                >
                  <div class="grid grid-cols-3 gap-2">
                    <div class="w-12 h-12 bg-cyan-500 rounded"></div>
                    <div class="w-12 h-12 bg-cyan-400 rounded"></div>
                    <div class="w-12 h-12 bg-cyan-600 rounded"></div>
                    <div class="w-12 h-12 bg-cyan-400 rounded"></div>
                    <div class="w-12 h-12 bg-cyan-500 rounded"></div>
                    <div class="w-12 h-12 bg-cyan-600 rounded"></div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Dark Mode - Small Box -->
            <div class="bento-box col-span-1 row-span-1 p-6 group">
              <div
                class="inline-flex p-3 bg-gray-700/30 rounded-xl mb-4 group-hover:scale-110 transition-transform"
              >
                <svg
                  class="w-6 h-6 text-gray-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
                  ></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold mb-2">Dark Mode</h3>
              <p class="text-sm text-gray-400">Built-in theme switching</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Features Section -->
      <section class="px-6 py-20 border-t border-gray-800/50">
        <div class="container mx-auto max-w-6xl">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
            Built for <span class="text-gradient">Modern Development</span>
          </h2>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center">
              <div class="inline-flex p-4 bg-indigo-500/10 rounded-xl mb-4">
                <svg
                  class="w-8 h-8 text-indigo-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2">Development Experience</h3>
              <p class="text-gray-400">
                Storybook integration, TypeScript support, and hot reload for
                rapid development
              </p>
            </div>

            <div class="text-center">
              <div class="inline-flex p-4 bg-purple-500/10 rounded-xl mb-4">
                <svg
                  class="w-8 h-8 text-purple-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"
                  ></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2">Build Tools</h3>
              <p class="text-gray-400">
                Vite, ESBuild, PostCSS with multiple output formats for any use
                case
              </p>
            </div>

            <div class="text-center">
              <div class="inline-flex p-4 bg-pink-500/10 rounded-xl mb-4">
                <svg
                  class="w-8 h-8 text-pink-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2">Quality Assurance</h3>
              <p class="text-gray-400">
                ESLint, Prettier, Playwright testing, and accessibility
                validation built-in
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Getting Started Section -->
      <section id="get-started" class="px-6 py-20 border-t border-gray-800/50">
        <div class="container mx-auto max-w-4xl">
          <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">
            Get Started in <span class="text-gradient">Seconds</span>
          </h2>

          <div class="space-y-8">
            <!-- CDN Installation -->
            <div class="bento-box p-8">
              <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                <span class="text-indigo-400">01</span>
                Install via CDN
              </h3>
              <p class="text-gray-400 mb-4">
                The quickest way to get started. Just add these tags to your
                HTML:
              </p>
              <div class="code-block">
                <pre><code class="text-gray-300">&lt;!-- CSS --&gt;
&lt;link rel="stylesheet" href="https://unpkg.com/bloum@latest/dist/bloum.css"&gt;

&lt;!-- JavaScript --&gt;
&lt;script src="https://unpkg.com/bloum@latest/dist/bloum.browser.js"&gt;&lt;/script&gt;</code></pre>
              </div>
            </div>

            <!-- NPM Installation -->
            <div class="bento-box p-8">
              <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                <span class="text-purple-400">02</span>
                Install via NPM
              </h3>
              <p class="text-gray-400 mb-4">
                For modern build tools and bundlers:
              </p>
              <div class="code-block mb-4">
                <code class="text-gray-300">npm install bloum</code>
              </div>
              <p class="text-gray-400 mb-4">Then import in your JavaScript:</p>
              <div class="code-block">
                <pre><code class="text-gray-300">
import 'bloum/dist/bloum.css';

// Initialize all components
initBloum();</code></pre>
              </div>
            </div>

            <!-- Basic Usage -->
            <div class="bento-box p-8">
              <h3 class="text-xl font-bold mb-4 flex items-center gap-2">
                <span class="text-pink-400">03</span>
                Start Using Components
              </h3>
              <p class="text-gray-400 mb-4">
                Just add the appropriate classes to your HTML:
              </p>
              <div class="code-block">
