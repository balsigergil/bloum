{
  "name": "bloum",
  "version": "0.16.0",
  "author": "Gil Balsiger <gil.balsiger@gmail.com>",
  "description": "A powerful library of modern web components for your design system.",
  "license": "MIT",
  "keywords": [
    "web-components",
    "custom-elements",
    "components",
    "ui",
    "library",
    "javascript"
  ],
  "homepage": "https://www.bloum.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/balsigergil/bloum.git"
  },
  "bugs": {
    "url": "https://github.com/balsigergil/bloum/issues"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/cjs/bloum.cjs",
  "module": "dist/esm/bloum.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "dev": "npm run sb",
    "build": "rimraf dist && concurrently \"npm run build:js\" \"npm run build:css\" \"npm run build:types\"",
    "build:js": "node scripts/bundle.js",
    "build:css": "postcss --config config/postcss.config.js src/*.css --dir dist --ext .min.css",
    "build:types": "tsc -p tsconfig.types.json",
    "test": "playwright test",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"./**/*.{js,jsx,cjs,ts,tsx,css,html,json,yml}\"",
    "format:check": "prettier --check \"./**/*.{js,jsx,cjs,ts,tsx,css,html,json,yml}\"",
    "docs": "npm run start -w docs",
    "docs:build": "npm run build -w docs",
    "prepare": "husky",
    "release": "release-it",
    "sb": "storybook dev -p 6006 --no-open",
    "sb-build": "storybook build"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.7.4",
    "focus-trap": "^7.8.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@eslint/js": "^9.39.2",
    "@floating-ui/dom": "^1.7.4",
    "@fontsource-variable/inter": "^5.2.8",
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@playwright/test": "^1.57.0",
    "@release-it/conventional-changelog": "^10.0.4",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-links": "^10.1.11",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/html-vite": "^10.1.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25",
    "@types/react": "^19.2.8",
    "concurrently": "^9.2.1",
    "conventional-changelog": "^7.1.1",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cssnano": "^7.1.2",
    "esbuild": "0.27.2",
    "eslint": "^9.39.2",
    "eslint-plugin-storybook": "^10.1.11",
    "fs-extra": "^11.3.3",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^14.0.0",
    "postcss-preset-env": "^11.1.1",
    "postcss-url": "^10.1.3",
    "prettier": "^3.8.0",
    "react": "^19.2.3",
    "release-it": "^19.2.3",
    "remark-gfm": "^4.0.1",
    "rimraf": "^6.1.2",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.1.18",
    "tslib": "^2.8.1",
    "typescript": "^5.9",
    "typescript-eslint": "^8.53.0",
    "vite": "^7.3.1"
  },
  "lint-staged": {
    "./src/**/*.ts": "eslint",
    "*.{js,jsx,cjs,ts,tsx,html,css,json,yml}": "prettier --write"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "draft": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits"
        },
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true
      }
    }
  },
  "workspaces": [
    "website"
  ]
}
