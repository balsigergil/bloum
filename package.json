{
  "name": "bloum",
  "version": "0.14.0",
  "author": "Gil Balsiger <gil.balsiger@gmail.com>",
  "description": "A modern library of web components.",
  "license": "MIT",
  "keywords": [
    "web-components",
    "custom-elements",
    "components",
    "ui",
    "library",
    "javascript"
  ],
  "homepage": "https://www.bloum.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/balsigergil/bloum.git"
  },
  "bugs": {
    "url": "https://github.com/balsigergil/bloum/issues"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "dist/cjs/bloum.cjs",
  "module": "dist/esm/bloum.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "dev": "npm run sb",
    "build": "rimraf dist && concurrently \"npm run build:js\" \"npm run build:css\" \"npm run build:types\"",
    "build:js": "node scripts/bundle.js",
    "build:css": "postcss --config config/postcss.config.js src/*.css --dir dist --ext .min.css",
    "build:types": "tsc -p tsconfig.types.json",
    "test": "playwright test",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"./**/*.{js,jsx,cjs,ts,tsx,css,html,json,yml}\"",
    "format:check": "prettier --check \"./**/*.{js,jsx,cjs,ts,tsx,css,html,json,yml}\"",
    "docs": "npm run start -w docs",
    "docs:build": "npm run build -w docs",
    "prepare": "husky",
    "release": "release-it",
    "sb": "storybook dev -p 6006 --no-open",
    "sb-build": "storybook build"
  },
  "dependencies": {
    "@floating-ui/dom": "^1",
    "focus-trap": "^7"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "@floating-ui/dom": "^1.6.13",
    "@fontsource-variable/nunito-sans": "^5.2.6",
    "@fortawesome/fontawesome-free": "^7.0.1",
    "@playwright/test": "^1.55.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@storybook/addon-a11y": "^9.1.5",
    "@storybook/addon-docs": "^9.1.5",
    "@storybook/addon-links": "^9.1.5",
    "@storybook/addon-themes": "^9.1.5",
    "@storybook/html-vite": "^9.1.5",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24",
    "@types/react": "^19.1.13",
    "concurrently": "^9.2.1",
    "conventional-changelog": "^7.1.1",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cssnano": "^7.1.1",
    "esbuild": "0.25.9",
    "eslint": "^9.35.0",
    "eslint-plugin-storybook": "^9.1.5",
    "fs-extra": "^11.3.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^13.0.2",
    "postcss-preset-env": "^10.3.1",
    "postcss-url": "^10.1.3",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "release-it": "^19.0.4",
    "remark-gfm": "^4.0.1",
    "rimraf": "^6.0.1",
    "storybook": "^9.1.5",
    "tailwindcss": "^4.1.13",
    "tslib": "^2.8.1",
    "typescript": "^5.9",
    "typescript-eslint": "^8.43.0",
    "vite": "^7.1.5"
  },
  "lint-staged": {
    "./src/**/*.ts": "eslint",
    "*.{js,jsx,cjs,ts,tsx,html,css,json,yml}": "prettier --write"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "draft": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "conventionalcommits"
        },
        "infile": "CHANGELOG.md",
        "ignoreRecommendedBump": true
      }
    }
  }
}
