{
  "name": "bloum",
  "version": "0.0.1",
  "author": "Gil Balsiger <gil.balsiger@gmail.com>",
  "description": "A lightweight yet powerful, unstyled web components library with customization capabilities.",
  "license": "MIT",
  "keywords": [
    "web-components",
    "custom-elements",
    "components",
    "ui",
    "library",
    "headless",
    "unstyled"
  ],
  "homepage": "https://github.com/balsigergil/bloum",
  "repository": {
    "type": "git",
    "url": "https://github.com/balsigergil/bloum.git"
  },
  "bugs": {
    "url": "https://github.com/balsigergil/bloum/issues"
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/bloum.umd.min.js",
  "module": "./dist/bloum.esm.min.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "dev": "npm run dev -w example",
    "build": "rimraf dist && concurrently \"npm run build:js\" \"npm run build:css\" \"npm run build:types\"",
    "build:js": "rollup -c rollup.config.js",
    "build:css": "postcss src/*.css --dir dist --ext .min.css",
    "build:types": "tsc -p tsconfig.types.json",
    "test": "vitest"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/node": "^20.10.6",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cssnano": "^6.0.3",
    "postcss": "^8.4.33",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.0",
    "postcss-nesting": "^12.0.2",
    "postcss-preset-env": "^9.3.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.3",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "example",
    "."
  ]
}
